<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_search_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent=".5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/chocolate"/>
            <TextView
                android:id="@+id/item_search_nomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nomi"
                app:layout_constraintTop_toBottomOf="@+id/item_search_img"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="#6200EA"
                android:textSize="15sp"
                android:fontFamily="@font/belgrano"/>

            <TextView
                android:id="@+id/item_search_miqdor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belgrano"
                android:text="miqdori"
                android:textColor="#6200EA"
                android:layout_margin="5dp"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/item_search_img"
                app:layout_constraintEnd_toEndOf="parent" />
            <TextView
                android:id="@+id/item_search_sana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belgrano"
                android:text="sana"
                android:textColor="#6200EA"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/item_search_last_price"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/item_search_vaqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belgrano"
                android:text="vaqti"
                android:textColor="#6200EA"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/item_search_sana"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/item_search_last_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/belgrano"
                android:text="puli"
                android:textColor="#6200EA"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/item_search_nomi"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>