<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B8D4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragments.homeFragment.HomeFragment">


<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginHorizontal="120dp"
    android:layout_marginTop="50dp"
    app:cardCornerRadius="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeWidth="0dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="40dp"
        app:strokeColor="#00B8D4"
        app:strokeWidth="1dp"
        android:layout_height="60dp">

       <com.google.android.material.card.MaterialCardView
           android:layout_width="match_parent"
           app:cardCornerRadius="40dp"
           android:layout_margin="3dp"
           android:layout_height="match_parent">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#FF0000"
               android:gravity="center"
               android:padding="10dp"
               android:text="Sotuv App"
               android:textAllCaps="false"
               android:fontFamily="@font/belgrano"
               android:textColor="@color/white"
               android:textSize="18sp"
               android:textStyle="bold" />
       </com.google.android.material.card.MaterialCardView>
    </com.google.android.material.card.MaterialCardView>
</com.google.android.material.card.MaterialCardView>



<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent=".7"
    style="@style/for_image_radius"
    app:cardCornerRadius="50dp"
    android:layout_marginHorizontal="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="10dp"
    app:layout_constraintStart_toStartOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/kalaska"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buyurtma"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/pay"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To'lov"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/xisobot"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xisobot"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/settings"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sozlama"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/cloud_send"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jo'natish"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:icon="@drawable/refresh"
                    app:iconTint="@color/black"
                    app:iconPadding="-5dp"
                    app:iconGravity="textEnd"
                    app:iconSize="30dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yangilash"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>